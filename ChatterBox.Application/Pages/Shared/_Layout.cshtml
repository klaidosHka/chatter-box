@using ChatterBox.Interfaces.Entities;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://kit.fontawesome.com/633356e7af.js" crossorigin="anonymous"></script>
</head>

@inject SignInManager<ChatUser> _signInManager;

<body class="position-fixed chatter-box-background w-100 h-100">
    <div class="h-100">
        <header class="d-flex col-md-12 align-content-center align-content-center chatter-box-header">
            <div class="col-md-6 float-left m-auto">
                <button class="btn btn-border-0">
                    <a href="~/Main" class="fa-solid fa-comment fa-xl text-decoration-none">
                        <span class="text-white fw-normal text-capitalize">
                            Chat
                        </span>
                    </a>
                </button>
            </div>

            @if (_signInManager?.Context?.User?.Identity?.IsAuthenticated ?? false)
            {
                <div class="col-md-6 float-right m-auto">
                    <a href="~/Identity/Account/Manage" class="text-decoration-none">
                        @*<img src="~/img/profile-circle.svg" alt="avatar" />*@

                        <span class="text-white fw-normal text-capitalize">
                            @_signInManager.Context.User.Identity.Name
                        </span>
                    </a>
                </div>
            }
        </header>

        <div class="w-100 mh-100">
            @RenderBody()
        </div>

        <footer class="fixed-bottom chatter-box-footer">
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>