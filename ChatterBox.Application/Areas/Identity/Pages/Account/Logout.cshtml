@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="d-flex h-100 w-100 mt-5 justify-content-center align-items-center">
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline h-100" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-primary text-dark fw-bolder">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="fw-bolder">You have successfully logged out of the application.</p>
        }
    }
</div>
