@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Sign up";
}
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-warning bg-gradient text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="text-dark fw-bold mb-2 text-uppercase">Sign up</h2>
                            <hr class="bg-dark"/>
                            <div class="d-flex justify-content-center text-center mt-4 pt-1"> 
                                <p class="text-info">
                                    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                                    Please enter an email address for this site below and click the Confirm button to finish
                                    logging in.
                                </p>
                            </div>
                            <hr class="bg-dark"/>
                            <div class="col-md justify-content-center text-center">
                                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger justify-content-center text-center"></div>
                                    <div>
                                        <input asp-for="Input.Email" class="form-control text-center" autocomplete="email" />
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Confirm</button>
                                </form>
                            </div>
                        </div>
                    <div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
