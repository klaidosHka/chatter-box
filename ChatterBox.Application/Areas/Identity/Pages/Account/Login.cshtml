@page
@model LoginModel

@{
    ViewData["Title"] = "Sign up";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-warning bg-gradient text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="text-dark fw-bold mb-2">Sign up / Log in</h2>
                            <hr class="bg-dark"/>
                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <form 
                                    id="external-account" 
                                    asp-page="./ExternalLogin" 
                                    asp-route-returnUrl="@Model.ReturnUrl" 
                                    method="post" 
                                    class="form-horizontal"
                                >
                                    <div>
                                        @{
                                            var provider = Model.ExternalLogins.First();

                                            <button
                                                type="submit" 
                                                class="btn btn-primary text-black"
                                                name="provider"
                                                value="@provider.Name"
                                                title="Log in using your @provider.DisplayName account"
                                                >
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    <div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
