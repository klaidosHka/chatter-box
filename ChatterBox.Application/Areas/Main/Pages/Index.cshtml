@page

@using System.Security.Claims
@using Microsoft.AspNet.Identity
@model ChatterBox.Application.Areas.Main.Pages.IndexModel;

@{
    var userMappedCurrent = await Model.GetCurrentUserAsync();

    string ResolvePicture(ClaimsPrincipal principal)
    {
        var address = principal.FindFirstValue("urn:google:picture");

        if (String.IsNullOrEmpty(address))
        {
            return "/img/profile-circle.svg";
        }

        return address;
    }
}

<link href="~/css/main.css" rel="stylesheet"/>

<div class="d-flex justify-content-center w-100 h-100 extra-chat-margin">
    <div class="d-flex chat-container">
        <div class="p-0 groups">
            <div class="group-top align-center">
                <button type="button" class="btn btn-secondary rounded-circle users-btn" id="toggle-users">
                    <i class="fa-solid fa-list"></i>
                </button>
            </div>

            <div class="group-middle">
                @foreach (var group in Model.GetGroups(true))
                {
                    <div class="group align-column-center">
                        <button type="button" class="btn btn-secondary rounded-circle users-btn">
                            <i class="fa-solid fa-layer-group"></i>
                        </button>
                        @group.Name
                    </div>
                }
            </div>

            <div class="group-bottom align-center">
                <button type="button" class="btn btn-secondary rounded-circle users-btn">
                    <i class="fa-solid fa-user-group"></i>
                </button>
            </div>
        </div>

        <div class="p-0 users" id="users-container">
            <div class="users-top d-flex flex-row justify-content-center">
                <div class="input-group search">
                    <input type="text" class="form-control" placeholder="Search..." id="user-search-input">
                </div>
            </div>

            <div class="users-middle">
                <ul class="list-not-styled chat-list mt-2 mb-0">
                    @foreach (var userMapped in Model.GetUsers())
                    {
                        if (userMapped.User.Id != HttpContext.User.Identity.GetUserId())
                        {
                            <li class="d-flex flex-row">
                                <button id="context-users-list-user"
                                        class="w-100 d-flex user"
                                        data-user-id="@userMapped.User.Id">
                                    <img src="@ResolvePicture(userMapped.Principal)"
                                         alt="avatar"
                                         class="rounded-circle avatar @(userMapped.Online ? "avatar-online" : "avatar-offline")">

                                    <div class="d-flex flex-column justify-content-center">
                                        <div class="justify-content-start">
                                            @userMapped.User.UserName
                                        </div>
                                    </div>
                                </button>
                            </li>
                        }
                    }
                </ul>
            </div>

            <div class="align-center users-bottom">
                <div class="d-flex w-75">
                    <img id="context-own-avatar"
                         src="@ResolvePicture(userMappedCurrent.Principal)"
                         alt="avatar"
                         class="rounded-circle avatar @(userMappedCurrent.Online ? "avatar-online" : "avatar-offline")">

                    <div class="d-flex flex-column justify-content-center">
                        <div class="justify-content-start">
                            @userMappedCurrent.User.UserName
                        </div>
                    </div>
                </div>

                <a href="/Identity/Account/Manage">
                    <button type="button" class="btn btn-secondary rounded-circle settings-btn align-center">
                        <i class="fa-solid fa-gear"></i>
                    </button>
                </a>
            </div>
        </div>

        <div class="p-0 chat">
            <div class="chat-top align-center">
                <div class="d-flex flex-row m-2 justify-content-center align-items-center">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <div class="justify-content-start">
                            <span id="context-target-name" class="fw-bolder">
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex chat-middle justify-content-center w-100">
                <div id="context-messages"
                     class="d-flex flex-column mt-3 w-75 justify-content-center align-items-center">
                    <div class="fw-bolder d-flex flex-column align-items-center">
                        <p>
                            Who are you going to talk to today?
                        </p>
                        <p>
                            Please select an user or a group to begin chatting.
                        </p>
                    </div>
                </div>
            </div>

            <div class="chat-bottom align-center">
                <div class="input-group mb-0 w-75">
                    <input id="context-input-text" type="text" class="form-control" placeholder="Write...">

                    <button id="context-emote-pick" class="btn fa-regular fa-smile-beam fa-xl"></button>

                    <button id="context-button-send" class="btn btn-primary">Send</button>
                </div>
            </div>

            <div class="chat-bottom align-center">
                <form onsubmit="return validateForm()">
                    <input type="file" name="photo" accept="image/png, image/jpeg, mage/svg">
                    <button type="submit" class="image-upload"> Upload </button>
                </form>
            </div>

        </div>
    </div>
</div>

<context
    id="context-data"
    data-user-id="@userMappedCurrent.User.Id"
    data-signalr-group-id=""
    data-target-id=""
    data-user-username="@userMappedCurrent.User.UserName"
    data-chat-type="">
</context>

<script src="~/js/constants.js"></script>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chatHandler.js"></script>
<script src="~/js/emoteHandler.js"></script>
<script src="~/js/userListClose.js"></script>
<script src="~/js/userSearch.js"></script>
<script src="~/js/imageUploadHandler.js"></script>